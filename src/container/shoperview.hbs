<main>
  <div>
    <hr />
    {{#with navigation}}
      <div class='nav'>
        {{#each links}}
          <div class='nav-item'>

            <a href='{{href}}' class='nav-link'>{{text}}</a>

          </div>
        {{/each}}
        <div class='nav-item'>
          <a href='#' class='nav-link disabled'>Disabled</a>
        </div>
      </div>
    {{/with}}
  </div>
  <hr />

  <div class='row'>
    <div class="col-8">
    {{#with formBlock}}
      <div>
            <div class="mt-3 mb-3">
            {{>title name=header big=false}}
            </div>
            {{#with rating}}
            <p>{{title}}: {{value}}</p>
            {{/with}}
      </div>

        {{#with actionBlock}}
            <div class="nav nav-tabs mb-5">
                {{#each tabs}}
                
                <div class="nav-item">
                   
                    {{#if isActive}}
                    <a class='nav-link active'>{{text}}</a>
                    
                    {{else}}
                     <a class='nav-link'>{{text}}</a>
                    {{/if}}
                </div>
        
                {{/each}}
            
            </div>

            <div class="mt-3">
                <hr>
            </div>

            {{#with report}}
                <div class="card">
                        <div class="card-body">
                            <p>{{title}}</p>
                        <div>
                      {{#with button}}
                      <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                      {{/with}}
                </div>
                </div>
                </div>
                
            {{/with}}

        {{/with}}

            <div class="mt-3">
                <hr>
            </div>
        
        
        {{#with feedbackBlock}}
            <div class="mt-3">
            <h5>{{title}}</h5>
            </div>

            <div>
          {{#each buttons}}
            {{#if isWarning}}
              <a href="{{link}}" class="btn btn-warning col-3">{{text}}</a>
            {{/if}}
            {{#if isSuccess}}
              <a href="{{link}}" class="btn btn-success col-4">{{text}}</a>
            {{/if}}
            {{#if isDanger}}
              <a href="{{link}}" class="btn btn-danger col-4">{{text}}</a>
            {{/if}}
          {{/each}}
        </div>
        {{/with}}
    </div>


        {{#with goodsInfo}}
            <div class="col-4">
                <div class="card mb-2">
                    <img class='card-img-top p-3'
                        src='{{photo}}'
                        alt='{{name}}'/>
                    <h5 class="card-title p-3">{{name}}</h5>
                </div>
                <div class='card mb-2 p-3'> 
                    <h5 class="card-title">{{price}}</h5>
                    <div>
                    {{#if inMarket}} Є в наявності {{/if}}
                    </div>
                    {{#each buttons}}
                        {{#if isPrimary}}
                        <a href="{{link}}" class="btn btn-primary mb-2">{{text}}</a>
                        {{/if}}
                        {{#if isSecondary}}
                        <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                        {{/if}}
                    {{/each}}
                </div>
                    <div class="card ps-2 pt-2">
                        {{#with seller}}
                        <p>{{title}}: 
                            <b>{{value}}</b>
                        </p>
                        {{/with}}
                    </div>
                </div>
            </div>
        {{/with}}

    {{/with}}
  </div>

    <div class="mt-5 mb-3">
        <hr>
    </div>

    {{> reviewitem}}

    {{#with service}}
        <div class="card text-bg-success text-center">
                  <div class="card-header">
                      {{>title name=title big=true}}
                  </div>
                  <div class="card-body">
                        <p class="text-uppercase">{{description}}</p>
                        {{#each buttons}}
                        <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                        {{/each}}
                    </div>
        </div>
      <hr>
    {{/with}}

    <div class="row">
        {{#each footer}}
          <div class="col-2">
              <div class="nav">
                <div>
                    {{#each []}}
                    {{#if @last}}   
                    
                    <a a href='{{link}}' class='nav-link disabled'>Disabled</a>
                    
                    {{else}}
                    
                    <a href='{{link}}' class='nav-link'>{{text}}</a>
                    
                    {{/if}}
                    {{/each}}
                </div>
              </div>
          </div>
        {{/each}}
    </div>
</main>