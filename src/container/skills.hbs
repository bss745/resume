<div>
{{#with main}}
  <main>
    <section>
    {{> title name="All skills" big=true}}
      <ul>
        {{#each skills}}
        <li>
          {{name}}
            {{#if point includeZero=true}} ({{point}}) {{/if}}
            {{#if isTop}} (Top) {{/if}}
            {{#unless point includeZero=true}} (not in a process...) {{/unless}}

            {{#unless point}} 
              {{#if point includeZero=true}}
                (in progress...) 
              {{/if}}
            {{/unless}}
        </li>
        {{/each}}
      </ul>
    </section>
    <section>
        {{> title name="All hobbies" big=false}}
    </section>
      <ol type="a">
        {{#each hobbies}} 
        <li>
          {{name}}
            {{#if isMain}} (favourite) {{/if}}
        </li>
        {{/each}}
      </ol>  
  </main>
{{/with}}
</div>

